                                                         </div>


                            <div class="form-group">
                                <input type="text" name="localidad" id="localidad" onkeypress="return sololetras(event)"  placeholder="Localidad" class="form-control"
                                "{{form4s.localidad}}">
                             
                            </div>
                            <div class="form-group">
                                <input type="text" name="observaciones" id="observaciones" placeholder="Observaciones" class="form-control"
                                "{{form4s.observaciones}}">
                                                            </div>
                            <div class="form-group">
                                <input type="text" name="firma" id="firma"  onkeypress="return sololetras(event)"  placeholder="¿Quién firma?" class="form-control"
                                "{{form4s.firma}}">
                                                          </div>
                                                        <br>

                <div class="form-group">
                   <button class="btn btn-success btn-block"  type="submit">Guardar
                   </button>        
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

   function sololetras(e) {
                key = e.keyCode || e.wich;
                teclado = String.fromCharCode(key);
                letras = " abcdefghijklmnopqrstuvwxyzñABCDEFGHIJKLMNÑOPQRSTUVWXYZ";
                especiales = "8-37-38-46-164"; //letra eñe}
                teclado_especial = false;
                for (var i in especiales) {
                    if (key == especiales[i]) {
                        teclado_especial = true;
                        break;
                    }
                }
                if(letras.indexOf(teclado)==-1 && !teclado_especial) {
                    return false;
                    
                }
            }

</script>