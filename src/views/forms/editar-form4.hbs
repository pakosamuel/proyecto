            <form action="/forms/editar-form4/{{form4s._}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                                <input type="text" name="dirigido" id="dirigido" onkeypress="return sololetras(event)"  placeholder="¿A quién va dirigido?" class="form-control"
                                value="{{form4s.dirigido}}">
                                                          </div>

                        <div class="form-group">
                                <label>Fecha</label>
                                <br>
                                <input type="date" name="fecha" id="fecha"placeholder="" class=" form-control" "{{form4s.fecha}}">
                                                            </div>

                        <div class="form-group">
                                <label>Día</label>
                                <br>
                                <input type="date" name="dia" id="dia"placeholder="" class=" form-control"  "{{form4s.dia}}">
                                                            </div>

                            <div class="form-group">
                                <input type="text" name="actividad" id="actividad" placeholder="Actividad" class="form-control"
                                "{{form4s.actividad}}">
                                                            </div>

                            <div class="form-group">
                                <input type="text" name="lugar" id="lugar"  onkeypress="return sololetras(event)"  placeholder="Lugar" class="form-control"
