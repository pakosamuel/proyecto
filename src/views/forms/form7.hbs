<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Llenar los campos </h3>
        </div>
        <div class="card-body">
            <form action="/notes/nueva-nota" method="POST">
         <div class="form-group">
                                <input type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control">
                             
                            </div>

                            <div class="form-group">
                                <label>Cantidad</label>
                                <input type="number" name="cantidad" id="cantidad" min="1" class="form-control">
                                
                            </div>

                            <div class="form-group">
                                 <label>Monto</label>
                                <input type="number" name="monto" id="monto" min="1" class="form-control">
                               
                            </div>

                            <div class="form-group">
                                <input type="text" name="solicitud" id="solicitud" placeholder="Solicitud" class="form-control">
                             
                            </div>

                            <div class="input-group ">
                                <label class="input-group-btn">
                                    <span class="btn btn-danger">

                                        Seleccionar Foto 1 <input name="fotoa" id="fotoa" type="file" style="display: none;" accept="image/*" multiple>
                                    </span>
                                </label>

                                <input type="text" class="form-control" readonly >
                                <br>
                            </div>
                            <br>
                            <div class="input-group ">
                                <label class="input-group-btn">
                                    <span class="btn btn-danger">
                                        Seleccionar Foto 2 <input name="fotod" id="fotod" type="file" style="display: none; "accept="image/*" multiple>
                                    </span>
                                </label>

                                <input type="text" class="form-control" readonly >
                                <br>
                                <br>
                            </div>
                                                        <br>

                <div class="form-group">
                   <button class="btn btn-success btn-block"  type="submit">Guardar
                   </button>        
                </div>
            </form>
        </div>
    </div>
</div>

