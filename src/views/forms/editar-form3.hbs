

<div class="col-md-10 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Llenar los campos </h3>
        </div>
        <div class="card-body">
            <form action="/forms/editar-form3/{{form3s._id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                <div class="group-form">
                              
                                  <label>Zona</label> <input type="number" name="zona" id="zona" min="1" class="form-control"
                                     value="{{form3s.zona}}">
                              
                            </div>
                            <br>
                            <div class="group-form">
                                <input type="text" name="cct" id="cct" placeholder="CCT" class="form-control"
                                value="{{form3s.cct}}">
                               
                            </div>
                            <br>
                            <div class="group-form">
                                <input type="text" name="nombre" id="nombre" placeholder="Escuela" class="form-control"
                                value="{{form3s.nombre}}">
                                                        </div>
                                                        <br>
                            <div class="group-form">
                                <input type="text" name="nombrefirma" id="nombrefirma" onkeypress="return sololetras(event)"  placeholder="¿Quién firma?" class="form-control"
                                value="{{form3s.nombrefirma}}">
                               
                            </div>
                            <br>
                            <div class="group-form">
                                <label>Saldo ciclo anterior</label>  <input type="number" name="saldoca" id="saldoca" min="1" class="form-control"
                                value="{{form3s.saldoca}}">
                                
                            </div>
                            <div class="group-form">
                                   <label>Ingreso ciclo anterior</label>
                                 <input type="number" name="ingresoca" id="ingresoca" min="1" class="form-control"
                                 value="{{form3s.ingresoca}}">
                             
                            </div>

                            <div class="group-form">
                                    <label>Saldo Actual</label> <input type="number" name="saldoac" id="saldoac" min="1" class="form-control"
                                    value="{{form3s.saldoac}}">
                              
                            </div>

                            <div class="group-form">
                                
                                 <label>Egresos</label><input type="number" name="egresos" id="egresos" min="1" class="form-control"
                                 value="{{form3s.egresos}}">
                               
                            </div>

                            <div class="group-form">
                                 <label>Existencia en caja</label>
                                <input type="number" name="existencia" id="existencia" min="1" class="form-control"
                                value="{{form3s.existencia}}">
                               
                            </div>
                            <br>
                            <div class="group-form">
                                <input type="text" name="observaciones" id="observaciones" class="form-control" placeholder="Observaciones"
                                value="{{form3s.observaciones}}">
                           
                            </div>
                                                        <br>

                <div class="form-group">
                   <button class="btn btn-success btn-block"  type="submit">Guardar
                   </button>        
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">

   function sololetras(e) {
                key = e.keyCode || e.wich;
                teclado = String.fromCharCode(key);
                letras = " abcdefghijklmnopqrstuvwxyzñABCDEFGHIJKLMNÑOPQRSTUVWXYZ";
                especiales = "8-37-38-46-164"; //letra eñe}
                teclado_especial = false;
                for (var i in especiales) {
                    if (key == especiales[i]) {
                        teclado_especial = true;
                        break;
                    }
                }
                if(letras.indexOf(teclado)==-1 && !teclado_especial) {
                    return false;
                    
                }
            }

</script>