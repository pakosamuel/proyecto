<div class="row">
	<div class="col-md-4 mx-auto">
		<card class="card mt-4 text-center">
			<div class="card-header">
				<h1>Login</h1>
			</div>
			<img src="/img/logo.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
			<form action="/users/singin" method="POST">
				<div class="form-group">
					<input type="email" 
					       name="email"
					       class="form-control"
					       placeholder="Ingrese su email" 
					       autofocus>
				</div>
				<div class="form-group">
					<input type="password" 
					       name="password"
					       class="form-control"
					       placeholder="Ingrese su password" 
					       autofocus>
				</div>
				<div class="form-group">
					<button type="submit" autofocus 
					        class="btn btn-block btn-success">Ingresar	
					</button>
				</div>
			</form>
		</card>
	</div>
</div>